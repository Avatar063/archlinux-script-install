[settings]
pseudo-transparency = true
#Цвета панели
[colors]
background = #0021457A
background-alt = #001463B6
foreground = #d4d4d4
foreground-alt = #83888b
primary = #2A76FF
secondary = #218DC8
alert = #bd2c40



#размеры панели
#указываем название бара к которому будет обрящаться скрипт автозапуска launch.sh в стоке [bar/название бара]
[bar/example]
#monitor = ${env:MONITOR:HDMI-1}
#monitor = VNC-0
#Ширина панели
width = 100%

#высота панели 
height = 15

 
#offset-x = 1%
#offset-y = 1%

##закругление ко краям
##radius = 15.0 

#зафиксированый центр или динамический true / false
fixed-center = true 

#локаль панели отвечает за вывод некотоых данных например дата
locale = ru_RU.UTF-8 

background = ${colors.background}
foreground = ${colors.foreground}



#размер нижней линии под модулями
line-size = 1
line-color = #5294E2




#Рамка вокруг панели
#border-size = 0
#border-color = #427ECF



#отступы содержимого панели от края
padding-left = 2
padding-right = 1



#отступы между модулями
module-margin-left = 1
module-margin-right = 2



#Шрифты
font-0 = fixed:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=7:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome 5 Free:style=Solid:size=8;2
font-4 = FontAwesome 5 Free:style=Regular:pixelsize=8;2
font-5 = FontAwesome 5 Brands:pixelsize=8;2



#Расположение и активация модулей
modules-left = i3  vk  telegram browser steam  pavucontrol  term fm vlc
modules-center = title
modules-right = pulseaudio  xkeyboard cpu memory  date powermenu

#powermenu


#системный лоток расположение tray иконок none|right|center|left
tray-position = center
tray-padding = 0 
tray-detached = enable

#tray-background = #000063ff




[settings]
#Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false



#Used for top and bottom aligned bars
[global/wm]
margin-top = 5
margin-bottom = 5



#Requires polybar to be built with xcursor support (xcb-util-cursor)
cursor-click = pointer
cursor-scroll = ns-resize



#Currently supported WM's
#wm-restack = bspwm
wm-restack = i3


#Tell the Window Manager not to configure the window.
#Use this to detach the bar if your WM is locking its size/position.
;override-redirect = true


#Fallback click handlers that will be called if
#there's no matching module handler found.
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

;vim:ft=dosini








