############################################################################################################
#Модуль управления звуком через pulseaudio
#https://github.com/polybar/polybar/wiki/Module:-pulseaudio


[module/pulseaudio]
type = internal/pulseaudio
format-volume = %{F#51FFE6}<ramp-volume><label-volume> <bar-volume>
label-volume = %{F#51FFE6} %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =   
label-muted-foreground = #d4d4d4


bar-volume-width = 10r
bar-volume-foreground-0 = #86C9BE
bar-volume-foreground-1 = #86C9BE
bar-volume-foreground-2 = #86C9BE
bar-volume-foreground-3 = #6BCCBB
bar-volume-foreground-4 = #6BCCBB
bar-volume-foreground-5 = #2DE3C4
bar-volume-foreground-6 = #2DE3C4
bar-volume-foreground-7 = #2DE3C4
bar-volume-foreground-8 = #2DE3C4
bar-volume-foreground-9 = #00FFD3
bar-volume-foreground-10 = #00FFD3
bar-volume-foreground-11 = #00FFD3
bar-volume-foreground-12 = #00FFD3
bar-volume-foreground-13 = #00FF8E
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 10
bar-volume-fill = |
bar-volume-fill-font = 9
bar-volume-empty = |
bar-volume-empty-font = 9
bar-volume-empty-foreground = ${colors.foreground-alt}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 



